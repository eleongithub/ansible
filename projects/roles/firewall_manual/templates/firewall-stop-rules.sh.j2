#!/bin/sh  
  
# Flush iptables.
iptables -F
iptables -t filter -F
# Delete chains.
iptables -X

# Add "ACCEPT" policy for tables
iptables -P INPUT ACCEPT
iptables -P FORWARD ACCEPT
iptables -P OUTPUT ACCEPT

iptables -t filter -P INPUT ACCEPT
iptables -t filter -P FORWARD ACCEPT
iptables -t filter -P OUTPUT ACCEPT

exit 0

