check process postgresql with pidfile /var/run/postgresql/{{ postgres_version }}-main.pid
group database
start program = "{{ postgres_start_command }}"
stop program = "{{ postgres_stop_command }}"
if failed unixsocket /var/run/postgresql/.s.PGSQL.{{ postgres_port }} protocol pgsql then restart
if failed host localhost port {{ postgres_port }} protocol pgsql then restart
if 5 restarts within 5 cycles then timeout