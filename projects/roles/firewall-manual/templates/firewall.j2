#! /bin/bash
### BEGIN INIT INFO
# Provides:          Iptables Firewall
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start iptables firewall at boot
# Description:       Enable firewall
### END INIT INFO


# Script to start/stop/restart/status iptables rules
case "$1" in
  start)
    echo "Starting Firewall."
    /bin/sh /etc/firewall-start-rules.sh
    ;;
  stop)
    echo "Stopping Firewall."
    /bin/sh /etc/firewall-stop-rules.sh
    ;;
  restart)
    echo "Restarting firewall."
    /bin/sh /etc/firewall-start-rules.sh
    ;;
  status)
    echo -e "`iptables -L -n`"
    EXIT=4 # program or service status is unknown
    NUMBER_OF_RULES=$(iptables-save | grep '^\-' | wc -l)
    if [ 0 -eq $NUMBER_OF_RULES ]; then
        EXIT=3 # program is not running
    else
        EXIT=0 # program is running or service is OK
    fi
    exit $EXIT
    ;;
  *)
    echo "Usage: /etc/init.d/iptables {start|stop|restart|status}"
    exit 1
    ;;
esac

exit 0