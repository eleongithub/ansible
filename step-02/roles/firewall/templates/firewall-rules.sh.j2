#!/bin/bash
  
# Flush iptables.
iptables -F
  
# Delete chains.
iptables -X
  
# Drop input trafic. 
iptables -P INPUT DROP
  
# Drop all output trafic. 
iptables -P OUTPUT DROP
  
# Drop forward.
iptables -P FORWARD DROP
  
# Drop XMAS and NULL scans.
iptables -A INPUT -p tcp --tcp-flags FIN,URG,PSH FIN,URG,PSH -j DROP
iptables -A INPUT -p tcp --tcp-flags ALL ALL -j DROP 
iptables -A INPUT -p tcp --tcp-flags ALL NONE -j DROP 
iptables -A INPUT -p tcp --tcp-flags SYN,RST SYN,RST -j DROP
  
# Drop broadcast packages.
iptables -A INPUT -m pkttype --pkt-type broadcast -j DROP
  
# Allow open connection to receive input trafic.
iptables -A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
  
# Allow open connection to receive output trafic.
iptables -A OUTPUT -m state ! --state INVALID -j ACCEPT

# Authorize SSH input request.SSH port is 22
iptables -A INPUT -p tcp -i eth0 --dport 22 -j ACCEPT

# Authorize Web input. Web default port is 80
iptables -A INPUT -p tcp -i eth0 --dport 80 -j ACCEPT

# Authorize Tomcat port 8080
iptables -A INPUT -p tcp -i eth0 --dport 8080 -j ACCEPT

# Accept inupt ICMP - PING request 
iptables -A INPUT -p icmp -i eth0 -j ACCEPT

# Authorize output ICMP - PING request
iptables -A OUTPUT -p icmp -m conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT

# Allow input loopback.
iptables -I INPUT -i lo -j ACCEPT
  
# Log input trafic.
iptables -A INPUT -j LOG
  
# Log forward trafic.
iptables -A FORWARD -j LOG 

exit 0

