#!/bin/sh  
  
# Flush iptables.
iptables -F
  
# Delete chains.
iptables -X
  
# Drop input trafic. 
iptables -P INPUT DROP
  
# Drop all output trafic. 
iptables -P OUTPUT DROP
  
# Drop forward.
iptables -P FORWARD DROP


